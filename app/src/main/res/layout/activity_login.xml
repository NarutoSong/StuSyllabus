<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/lightblue"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/id_login_et_stuid"
            android:hint="请输入您的学号"
            style="@style/style_login_et" />

        <EditText
            android:id="@+id/id_login_et_pwd"
            style="@style/style_login_et"
            android:inputType="textPassword"
            android:hint="请输入选课密码" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#E0E6E4"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical" >

            <!-- 登录按钮 -->

            <Button
                android:id="@+id/id_login_loginbt"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/login_button"
                android:gravity="center"
                android:text="登录"
                android:textColor="#ffffff"
                android:textSize="12dp" />
            <!-- 备注 -->

            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="12dp"
                android:text="@string/login_remark"
                android:textColor="#51636D"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/biaoqian1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:text="@string/app_name"
                android:textColor="#51636D"
                android:textSize="14dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>